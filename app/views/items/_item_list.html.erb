<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Date</th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= link_to item.title, item %></td>
      <td><%= item.price %></td>
      <td><%= time_ago_in_words item.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @items %>