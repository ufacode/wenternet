<hr class="topbar">
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">
        <%= header %>
      </h1>
      <hr/>
      <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3">
          <div class="well">
            <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-inline" }) do |f| %>
              <%= devise_error_messages! %>
              <div class="row">
                <div class="col-sm-2 inline-label">
                  <%= f.label :email %>
                </div>
                <div class="col-sm-10">
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>
              <div class="row" style="margin-top: 20px;">
                <div class="col-sm-12 col-sm-offset-2">
                  <%= f.submit "#{ button }", class: "btn btn-primary"  %>
                </div>
              </div>
            <% end %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>