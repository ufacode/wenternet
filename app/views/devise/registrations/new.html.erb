<hr class="topbar"/>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Создание профиля</h1>
      <hr/>
      <div class="row">
        <div class="col-sm-12 col-md-6">
          <div class="well">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-vertical") do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :name, "Отображаемое имя" %><br />
                <%= f.text_field :name, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password, "Пароль" %>
                <% if @validatable %>
                  <em>(не менее <%= @minimum_password_length %> символов)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
              <br/>
              <div class="actions">
                <%= f.submit "Создать", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-sm-12 col-md-6 account-sidebar hidden-sm">
          <div class="row">
            <div class="col-sm-3">
              <img src="<%= asset_path("theme/icons/Crest.png") %>" width="50"/>
            </div>
            <div class="col-sm-8">
              <h3>Why us?</h3>
              <p>We're one of the most recognisable brands, attracting thousands of buyers every month.<p>
            </div>
          </div>
          <br/>
          <div class="row">
            <div class="col-sm-3">
              <img src="<%= asset_path("theme/icons/Pie-Chart.png") %>" width="40"/>
            </div>
            <div class="col-sm-8">
              <h3>Magnet for buyers</h3>
              <p>We make sure your listings receive maximum exposure and is presented in an engaging way</p>
            </div>
          </div>
          <br/>
          <div class="row">
            <div class="col-sm-3">
              <img src="<%= asset_path("theme/icons/Search.png") %>" width="40"/>
            </div>
            <div class="col-sm-8">
              <h3>Focused searches</h3>
              <p>Our technology and algorithm matches potential buyers directly to your listings</p>
            </div>
          </div>
          <br/>
          <div class="row">
            <div class="col-sm-3">
              <img src="<%= asset_path("theme/icons/Telephone.png") %>" width="40"/>
            </div>
            <div class="col-sm-8">
              <h3>Mobile web</h3>
              <p>Your listings will always be accessible to everyone, even when they are on the move, via our responsive mobile website</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
