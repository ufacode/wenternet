<!DOCTYPE html>
<html>
<head>
  <title>Admin.Wenternet</title>
  <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <a href="#menu-toggle" class="btn btn-default btn-hamburger" id="menu-toggle"><span class="glyphicon glyphicon-menu-hamburger"></span></a>

  <div id="wrapper">

    <%= render "inc/admin/sidebar" %>

    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script type="text/javascript">
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>
</html>
