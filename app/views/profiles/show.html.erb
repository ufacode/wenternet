<hr class="topbar">
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          Данные пользователя
        </div>
        <div class="panel-body">
          <%= form_for(@user, url: profile_path(@user), html: { method: :patch, class: "form-horizontal" }) do |f| %>
            <%= form_errors @user %>
            <div class="form-group">
              <%= f.label :name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :city, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= collection_select(:user, :city_id, City.all, :id, :name, {:include_blank => 'Please Select'}, class: "form-control") %>
              </div>
            </div>
            <div class="actions">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          Поданные объявления
        </div>
        <ul class="list-group">
          <% @user.items.each do |item| %>
            <li class="list-group-item">
              <%= link_to item.title, item_path(item) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
