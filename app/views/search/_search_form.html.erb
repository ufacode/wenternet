<%= form_tag(controller: 'search', action: 'create', method: 'post') do %>
  <%= text_field_tag('search[query]') %>
  <%= collection_select(:search, :city, City.all, :id, :name) %>
  <%= collection_select(:search, :category, Category.all, :id, :name) %>
  <%= collection_select(:search, :subcategory, Subcategory.all, :id, :name) %>
  <%= submit_tag('Search') %>
<% end %>